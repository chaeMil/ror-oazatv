<div class="row toolbar">
  <div class="col-md-5">
    <h3><%= @archive_item.title %></h3>
  </div>
  <div class="col">
    <p><%= t('admin.label.type') %>: <%= @archive_file.file_type %></p>
  </div>
  <div class="col">
    <p><%= t('admin.label.language') %>: <%= @archive_file.language.title unless @archive_file.language.nil? %></p>
  </div>
  <div class="col text-right">
    <%= link_to t('admin.action.back'), admin_archive_item_path(id: @archive_item.id),
                class: 'btn btn-secondary' %>
    <%= link_to t('admin.action.edit'),
                edit_admin_archive_item_archive_file_path(archive_item_id: @archive_item.id,
                                                          id: @archive_file.id),
                class: 'btn btn-warning' %>
  </div>
</div>

<div class="container-fluid">
  <br>

  <div class="row">
    <% if @archive_file.image? %>
      <%= render 'image_view' %>
    <% elsif @archive_file.video? %>
      <%= render 'video_view' %>
    <% elsif @archive_file.subtitles? %>
      <%= render 'subtitles_view' %>
    <% end %>
  </div>
</div>