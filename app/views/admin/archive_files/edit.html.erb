<div class="row toolbar" style="padding-right: 15px;">
  <div class="col">
    <h3><%= @archive_item.title %></h3>
  </div>
  <div class="col-1">
    <p><%= t('admin.label.type') %>: <%= @archive_file.file_type %></p>
  </div>
  <div class="col-2">
    <p><%= t('admin.label.language') %>: <%= @archive_file.language.title unless @archive_file.language.nil? %></p>
  </div>
  <div class="col-5 text-right">
    <buton class="btn btn-secondary"
           onclick="javascript:history.back();">
      <%= t('admin.action.back') %>
    </buton>
    <%= link_to t('admin.label.show'),
                admin_archive_item_archive_file_path(archive_item_id: @archive_item.id, id: @archive_file.id),
                class: 'btn btn-primary' %>
    <a href="#" data-submit-form="upload_archive_file_form"
       class="btn btn-success">
      <%= t('admin.action.save') %>
    </a>
  </div>
</div>

<div class="container archive-file-new">
  <div class="row">
    <div class="col-12">
      <%= render 'form', archive_file: @archive_file, edit: true %>
    </div>
  </div>
</div>
