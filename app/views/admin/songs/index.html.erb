<h1>Songs</h1>

<table>
  <thead>
  <tr>
    <th>
      Title
    </th>
    <th>
      Author
    </th>
    <th>
      Tag
    </th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @songs.each do |song| %>
      <tr>
        <td><%= song.title %></td>
        <td><%= song.author %></td>
        <td><%= song.tag %></td>
        <td><%= link_to 'Show', admin_song_path(song) %></td>
        <td><%= link_to 'Edit', edit_admin_song_path(song) %></td>
        <td><%= link_to 'Destroy', admin_song_path(song), method: :delete, data: {confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Song', new_admin_song_path %>
