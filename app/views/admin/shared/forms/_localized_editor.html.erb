<div class="row">
  <% @languages.each do |language| %>
    <div class="col-lg-6">
      <%= label_tag "#{name}_#{language['locale']}", "#{name.capitalize} (#{language['locale'].upcase})" %>
      <%= text_area_tag "#{model.class.name.underscore}[#{name}_#{language['locale']}]",
                        model.send("#{name}_#{language['locale']}"),
                        data: {provider: 'summernote'} %>
    </div>
  <% end %>
</div>
