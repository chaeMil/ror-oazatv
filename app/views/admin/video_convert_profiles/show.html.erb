<div class="row toolbar">
  <div class="col">
    <h3><%= t('admin.menu.video_convert_profiles') %> > <%= @profile[:title] %> </h3>
  </div>
  <div class="col text-right">
    <buton class="btn btn-secondary"
           onclick="javascript:history.back();">
      <%= t('admin.action.back') %>
    </buton>
    <%= link_to t('admin.action.edit'),
                edit_admin_video_convert_profile_path(@profile),
                class: 'btn btn-warning' %>
  </div>
</div>

<br>

<div class="container">
  <div class="row">
    <div class="col">
      <div class="card">
        <div class="card-body">
          <h3 class="card-title">
            <%= t('admin.label.video') %>
          </h3>
          <p class="card-text">
            <%= t('admin.label.codec') %>: <%= @profile[:video_codec] %> <br>
            <%= t('admin.label.bitrate') %>: <%= @profile[:video_bitrate] %> kb/s <br>
            <%= t('admin.label.framerate') %>: <%= @profile[:frame_rate] %> <br>
            <%= t('admin.label.resolution') %>: <%= @profile[:resolution] %>
          </p>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card">
        <div class="card-body">
          <h3 class="card-title">
            <%= t('admin.label.audio') %>
          </h3>
          <p class="card-text">
            <%= t('admin.label.codec') %>: <%= @profile[:audio_codec] %> <br>
            <%= t('admin.label.bitrate') %>: <%= @profile[:audio_bitrate] %> kb/s <br>
            <%= t('admin.label.sample_rate') %>: <%= @profile[:audio_sample_rate] %> <br>
            <%= t('admin.label.channels') %>: <%= @profile[:audio_channels] %>
          </p>
        </div>
      </div>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col">
      <div class="card">
        <div class="card-body">
          <h3 class="card-title">
            <%= t('admin.label.other') %>
          </h3>
          <div class="row">
            <div class="col">
              <p>
                <%= t('admin.label.extension') %>: .<%= @profile[:extension] %>
              </p>
            </div>
            <div class="col">
              <p>
                <%= t('admin.label.threads') %>: <%= @profile[:threads] %>
              </p>
            </div>
            <div class="col">
              <p>
                <%= t('admin.label.custom_parameter') %>: <%= @profile[:custom] %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<br>