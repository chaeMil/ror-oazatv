<p>name: <%= @archive_item.title %></p>

<p>description: <%= @archive_item.description %></p>

<p>published: <%= @archive_item.published %></p>

<p>hash_id: <%= @archive_item.hash_id %></p>

<p>date: <%= @archive_item.date %></p>

<p>tags: <%= @archive_item.tags %></p>

<p>note: <%= @archive_item.note %></p>

<% if @archive_files.present? %>
    <div class="row">
      <% @archive_files.each do |archive_file| %>
          <div class="col-md-3">
            <div class="card">
              <% if archive_file.image? %>
                  <%= image_tag archive_file.file.url, class: 'card-img-top' if archive_file.file.present? %>
              <% end %>
              <div class="card-body">
                <h4 class="card-title"><%= archive_file.file.identifier if archive_file.file.present? %></h4>
                <p class="card-text"><%= archive_file.file_type %></p>
                <%= link_to 'Show', admin_archive_item_archive_file_path(archive_item_id: @archive_item.id, id: archive_file.id),
                  class: 'btn btn-primary' %>
                <%= link_to 'Delete', admin_archive_item_archive_file_path(archive_item_id: @archive_item.id, id: archive_file.id),
                            method: :delete, class: 'btn btn-warning' %>
              </div>
            </div>


          </div>
      <% end %>
    </div>
<% end %>

<%= link_to 'Add File', new_admin_archive_item_archive_file_path(@archive_item) %>
<%= link_to 'Edit', edit_admin_archive_item_path(@archive_item) %> |
<%= link_to 'Back', admin_archive_items_path %>
