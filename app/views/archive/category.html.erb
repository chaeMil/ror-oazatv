<div class="container category">
  <% if @page.to_i > 1 %>
    <div class="row">
      <div class="col-12">
        <div class="pagination-wrapper">
          <%= paginate @videos, theme: 'twitter-bootstrap-4', pagination_class: 'pagination-sm' %>
        </div>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col-12">
      <h1>
        <%= @category.title %>
      </h1>
    </div>
  </div>
  <div class="row">
    <% @videos.each do |video| %>
      <div class="col-sm-6 col-md-4 col-lg-3">
        <%= render 'shared/video_card', video: video %>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="pagination-wrapper">
        <%= paginate @videos, theme: 'twitter-bootstrap-4', pagination_class: 'pagination-sm' %>
      </div>
    </div>
  </div>
</div>