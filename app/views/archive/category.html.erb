<div class="container category">
  <row>
    <div class="col-12">
      <h1>
        <%= @category.title %>
      </h1>
    </div>
  </row>
  <div class="row">
    <% @videos.each do |video| %>
      <div class="col-sm-6 col-md-4 col-lg-3">
        <%= render 'shared/video_card', video: video %>
      </div>
    <% end %>
  </div>
</div>